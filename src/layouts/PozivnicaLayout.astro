---
type Props = {
  title?: string
  description?: string
  color?: string
}

const {
  title = "Uzimam - web pozivnica",
  color = "#efedec",
  description = "Stvorite online pozivnice u obliku vlastite web stranice za vaše vjenčanje. Svi detalji, informacije i uspomene na jednom mjestu, uključujući galeriju fotografija. Stranica služi kao pozivnica prije vjenčanja, a nakon toga čuva uspomene i omogućuje dijeljenje s obitelji i prijateljima. Uz opciju online potvrde dolaska gostiju, vaša svadba bit će jedinstvena i nezaboravna.",
} = Astro.props
---

<!doctype html>
<html lang="hr">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content="Uzimam - Vaše vjenčanje na webu" />
    <meta
      property="og:image"
      content="https://www.uzimam.com/assets/images/og-img.jpg"
    />
    <meta
      property="og:description"
      content="Stvorite moderne online pozivnice za Vaše vjenčanje, sačuvajte uspomene u galeriji fotografija. Savršeno za dijeljenje s obitelji i prijateljima, uvijek i svugdje"
    />
    <meta property="og:url" content="https://www.uzimam.com/" />
    <meta property="og:site_name" content="Uzimam.com" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg" />
    <title>{title}</title>
  </head>

  <body style={`background-color: ${color};`}>
    <div class="container">
      <slot />
    </div>
  </body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  html,
  body {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }
  .container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100vw;
    height: 100vh;
  }
</style>
