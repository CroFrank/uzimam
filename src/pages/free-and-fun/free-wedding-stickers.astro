---
import { getCollection } from "astro:content"
import Sticker from "../../components/Sticker.astro"
import Layout from "../../layouts/Layout.astro"
import Header from "../../components/ui/Header.astro"
const sparky = import.meta.env.PUBLIC_KONTAKT

const data = await getCollection("stickers")

const SEO = {
  title: "Uzimam | Wedding stickers",
  description:
    "Besplatni wedding stickeri za vaše posebne trenutke! Preuzmite kolekciju jedinstvenih i elegantnih stickera za planiranje vjenčanja, dekoracije, pozivnice i još mnogo toga. Dodajte personalizirani dodir vašem velikom danu – preuzimanje je jednostavno i potpuno besplatno!",
}
---

<Layout title={SEO.title} description={SEO.description}>
  <Header title="Stickers" subtitle="Besplatno za osobnu upotrebu" />

  <!-- start wpo-shop-page -->
  <section class="wpo-shop-page section-padding">
    <h2 class="hidden">Weeding stickers</h2>
    <div class="container">
      <div class="row">
        <div class="col-lg-9 order-lg-2">
          <!-- start wpo-product-section -->
          <div class="wpo-product-section">
            <div class="sorting-section">
              <ul>
                <li class="novi">Svaki tjedan novi stickeri</li>
                <li>
                  <a
                    href="https://www.bonani.hr/"
                    target="_blank"
                    class="button">Naruči rezanje</a
                  >
                </li>
              </ul>
            </div>
            <div class="wpo-product-wrap">
              <div class="row">
                {data.map((sticker: any) => <Sticker sticker={sticker} />)}
              </div>
            </div>
          </div>
          <!-- end wpo-product-section -->
        </div>
        <div class="col-lg-3 col-md-8 order-lg-1">
          <div class="wpo-shop-sidebar">
            <div class="widget woocommerce widget_product_categories">
              <h3>Upute</h3>
              <ul class="product-categories">
                <li class="cat-item cat-parent">
                  <span>Izaberite motive</span>
                </li>
                <li class="cat-item cat-parent">
                  <span>Preuzmite besplatno u PDF-u</span>
                </li>
                <li class="cat-item cat-parent">
                  <span>Isprintajte na samoljepljivom papiru</span>
                </li>
                <li class="cat-item cat-parent">
                  <span>Izrežite škarama</span>
                </li>
                <li class="cat-item cat-parent">
                  <span>Pišite nam svoje želje</span>
                </li>
                <li class="cat-item cat-parent">
                  <span>Samo za osobnu upotrebu</span>
                </li>
              </ul>
            </div>

            <div class="widget woocommerce widget_product_categories">
              <h3>Naručite strojno rezanje</h3>
              <ul class="product-categories">
                <li class="cat-item cat-parent">
                  <span>Izrada i rezanje po narudžbi</span>
                  <a class="link" href="https://www.bonani.hr/" target="_blank"
                    >Obrt Bonani</a
                  >
                </li>
              </ul>
            </div>
            <div class="widget woocommerce widget_product_categories">
              <h3>Što još?!</h3>
              <ul class="product-categories">
                <li class="cat-item cat-parent">
                  <span>USKORO! free wedding planners</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="wpo-contact-pg-section section-padding">
    <div class="container">
      <div class="row">
        <div class="col col-lg-10 offset-lg-1">
          <div class="wpo-contact-title">
            <h2>Pišite nam</h2>
            <p>
              Pišite nam kakve stickere, motive, dimenzije, oblike biste htjeli
              da napravimo
            </p>
          </div>
          <div class="wpo-contact-form-area">
            <form action={`https://submit-form.com/${sparky}`}>
              <input type="hidden" name="_feedback.whitelabel" value="true" />
              <input
                type="hidden"
                name="_feedback.success.title"
                value="Primili smo Vašu poruku, javljamo se brzo, hvala!"
              />
              <input
                type="hidden"
                name="_feedback.success.message"
                value="Povratak:"
              />
              <div>
                <input
                  type="text"
                  class="form-control"
                  name="name"
                  id="name"
                  placeholder="Ime*"
                  required
                  minlength="1"
                  maxlength="16"
                />
              </div>
              <div>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  id="email"
                  placeholder="Vaš Email*"
                  required
                />
              </div>

              <div class="fullwidth">
                <textarea
                  class="form-control"
                  name="note"
                  id="note"
                  placeholder="Poruka...*"
                  required
                  minlength="4"
                  maxlength="450"></textarea>
              </div>
              <div class="fullwidth">
                <label for="my-checkbox" class="label">
                  <input
                    type="checkbox"
                    id="my-checkbox"
                    name="my-checkbox"
                    required
                  />
                  Razumijem da će se osobni podaci koristiti isključivo za kontakt
                  i da se neće koristiti u druge svrhe kako je definirano u polici
                  privatnosti.
                </label>
              </div>
              <div class="submit-area">
                <button type="submit" class="theme-btn-s4">Pošalji</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- end wpo-shop-page -->
</Layout>
<style>
  .button {
    padding: 10px 20px;
    background-color: #b5a2bd;
    color: #ffffff;
    border: none;
    font-size: 1.3rem;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .button:hover {
    background-color: #a28aac;
  }

  .novi {
    color: #a28aac;
  }
  .link {
    display: block;
    color: blue !important;
    padding-top: 5px;
  }
  .wpo-contact-pg-section {
    margin-bottom: 200px;
  }
  #my-checkbox {
    width: 30px;
    margin-right: 31px;
  }
  .kontakt-area {
    min-height: 300px;
  }

  .label {
    display: inline-flex;
    align-items: center;
  }
</style>
