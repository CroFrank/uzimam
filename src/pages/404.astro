---
import Layout from "../layouts/Layout.astro"
---

<Layout>
  <!-- start wpo-page-title -->
  <section class="wpo-page-title">
    <div class="container">
      <div class="row">
        <div class="col col-xs-12">
          <div class="wpo-breadcumb-wrap">
            <h2>Error 404</h2>
            <ol class="wpo-breadcumb-wrap">
              <li><a href="index.html">Home</a></li>
              <li>404</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->
    <div class="frame-shape-1 wow fadeInLeftSlow" data-wow-duration="1200ms">
      <img src="assets/images/slider/invitation-shape-1.png" />
    </div>
    <div class="frame-shape-2 wow fadeInRightSlow" data-wow-duration="1200ms">
      <img src="assets/images/slider/invitation-shape-2.png" />
    </div>
  </section>
  <!-- end page-title -->

  <!-- start error-404-section -->
  <section class="error-404-section section-padding">
    <div class="container">
      <div class="row">
        <div class="col col-xs-12">
          <div class="content clearfix">
            <div class="error">
              <img src="assets/images/error-404.svg" />
            </div>
            <div class="error-message">
              <h3>Oops! Krivi put, ovdje nema ništa :)</h3>
              <p>
                Žao nam je, ali izgleda da ne možemo pronaći stranicu koju ste
                tražili. To može biti zato što ste upisali web adresu
                nepravilno.
              </p>
              <a href="/" class="theme-btn-s4">Povratak</a>
            </div>
          </div>
        </div>
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->
  </section>
  <!-- end error-404-section -->
</Layout>
